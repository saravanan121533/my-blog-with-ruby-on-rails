<div class="panel panel-default" id="category-list">
  <div class="panel-heading">
    Categories
  </div>

  <ul class="list-group">
    <% if get_categories.present? %>
      <% get_categories.each do |category| %>
        <li class="list-group-item">
          <h5>
            <%= link_to category_path(category) do %>
              <%= category.title.capitalize %>
            <% end %>
            <span class="badge pull-right">
              <%= get_category_post_count(category) %>
            </span>
          </h5>
        </li>
      <% end %>

    <% else %>
        <p>No category to display.</p>
    <% end %>
  </ul>
</div>

<% if user_signed_in? %>
  <div class="panel panel-default" id="favourites_list">
    <div class="panel-heading">
      User Favourites
    </div>

    <ul class="list-group">
      <% if @favourites.present? %>
        <% @favourites.each do |fave| %>
          <li class="list-group-item">
            <h5>
              <%= link_to post_path(fave.post) do %>
                <%= fave.post.title %>
              <% end %>
            </h5>
          </li>

        <% end %>

      <% else %>
        <li class="list-group-item">
          <h5>No user favourites to display.</h5>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
